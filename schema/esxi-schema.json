{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "esxi_host": {
      "type": "string",
      "description": "The hostname of the ESXi host."
    },
    "remote_datastore": {
      "type": "string",
      "description": "The name of the remote datastore."
    },
    "network_name": {
      "type": "string",
      "description": "The name of the network."
    },
    "guest_build_dir": {
      "type": "string",
      "description": "The directory path for guest builds."
    }
  },
  "required": ["esxi_host", "remote_datastore", "network_name", "guest_build_dir"],
  "additionalProperties": false
}
